<div class="page-header">
  <h1>
    Equipment
    <a href="/equipment/new" class="btn btn-lg btn-success">New Equipment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image</th>
        <th>Owner</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>

      <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.title %></td>
        <td><%= equipment.description %></td>
        <td><img src='<%= equipment.image %>' class='img-responsive'></td>
        <td>
          <% if equipment.owner.present? %>
            <a href="/users/<%= equipment.owner.id %>">
              <%= equipment.owner.id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if equipment.category.present? %>
            <a href="/categories/<%= equipment.category.id %>">
              <%= equipment.category.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/equipment/<%= equipment.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == equipment.owner %>
            <a href="/equipment/<%= equipment.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_equipment/<%= equipment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @equipment, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
