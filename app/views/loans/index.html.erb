        <div class="form-group">
      <%= f.label :piece_of_equipment_title_cont, "Equipment title contains" %>
      <%= f.text_field :piece_of_equipment_title_cont, :class => "form-control", :placeholder => "Equipment title contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/loans" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#loans_filters">
      Show Filters
    </a>
  </div>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Equipment</th>
        <th>Borrower</th>
        <th>Owner</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Pickupdropoff location</th>
        <th>Actions</th>
      </tr>

      <% @loans.each do |loan| %>
      <tr>
        <td>
          <% if loan.piece_of_equipment.present? %>
            <a href="/equipment/<%= loan.piece_of_equipment.id %>">
              <%= loan.piece_of_equipment.title %>
            </a>
          <% end %>
        </td>
        <td>
          <% if loan.borrower.present? %>
            <a href="/users/<%= loan.borrower.id %>">
              <%= loan.borrower.id %>
            </a>
          <% end %>
        </td>
        <td><%= loan.owner_id %></td>
        <td><%= loan.start_time %></td>
        <td><%= loan.end_time %></td>
        <td><%= loan.pickupdropoff_location %></td>
        <td>
          <a href="/loans/<%= loan.id %>" class="btn btn-primary">Show</a>
          <a href="/loans/<%= loan.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_loan/<%= loan.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @loans, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>