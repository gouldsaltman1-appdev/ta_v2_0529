<div class="page-header">
  <h1>
    Loans
    <a href="/loans/new" class="btn btn-lg btn-success">New Loan</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Equipment</th>
        <th>Borrower</th>
        <th>Owner</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Pickupdropoff location</th>
        <th>Actions</th>
      </tr>

      <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.equipment_id %></td>
        <td><%= loan.borrower_id %></td>
        <td><%= loan.owner_id %></td>
        <td><%= loan.start_time %></td>
        <td><%= loan.end_time %></td>
        <td><%= loan.pickupdropoff_location %></td>
        <td>
          <a href="/loans/<%= loan.id %>" class="btn btn-primary">Show</a>
          <a href="/loans/<%= loan.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_loan/<%= loan.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
