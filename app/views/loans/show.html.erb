<div class="page-header">
  <h3>Loan #<%= @loan.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Equipment</dt>
      <dd><%= @loan.equipment_id %></dd>

      <dt>Borrower</dt>
      <dd><%= @loan.borrower_id %></dd>

      <dt>Owner</dt>
      <dd><%= @loan.owner_id %></dd>

      <dt>Start time</dt>
      <dd><%= @loan.start_time %></dd>

      <dt>End time</dt>
      <dd><%= @loan.end_time %></dd>

      <dt>Pickupdropoff location</dt>
      <dd><%= @loan.pickupdropoff_location %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/loans" class="btn btn-primary">
        Back
      </a>
      <a href="/loans/<%= @loan.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_loan/<%= @loan.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Loan has many owner -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Owner
      </li>

      <% @loan.owner.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
